{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/tracing.cpp",
                "${workspaceFolder}/framebuffer.cpp",
                "${workspaceFolder}/linedrawer.cpp",
                "${workspaceFolder}/camera.cpp",
                "${workspaceFolder}/sphere.cpp",
                "${workspaceFolder}/scene.cpp",
                "${workspaceFolder}/plane.cpp",
                "${workspaceFolder}/triangle.cpp",
                "${workspaceFolder}/polymesh.cpp",
                "${workspaceFolder}/material.cpp",
                "${workspaceFolder}/spotlight.cpp",
                "${workspaceFolder}/pointlight.cpp",
                "${workspaceFolder}/alglibmisc.cpp",
                "${workspaceFolder}/alglibinternal.cpp",
                "${workspaceFolder}/ap.cpp",
                "-o",
                "${workspaceFolder}/finalexecutable",
                "-lm",
                "-O3" // -O3/-O0
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }, 
        {
            "type": "shell",
            "label": "view ppm",
            "command": "pnmtopng test.ppm > test.png"
        },
        {
            "type": "shell",
            "label": "view blur ppm",
            "command": "pnmtopng test.ppm > test.png"
        }
    ]
}